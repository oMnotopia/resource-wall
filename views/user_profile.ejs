<!DOCTYPE html>
<html lang="en">

  <%- include('partials/_head') %>
  <script type="text/javascript" src="/scripts/user_profile.js"></script>
<body>
  <%- include('partials/_header') %>

  <main class="update-account">
    <h3>Personal Profile</h3>
    <div>
      <form action="/users/:userid/profile" method="POST" class="update-profile-form">
          <div>
            <label for="name">Name</label>
            <br>
            <input
              type="text"
              name= "name"
              value="<%= name %>"
              required
            />
            <br>
            <label for="email">Email</label>
            <br>
            <input
              type="email"
              name="email"
              value="<%= email %>"
              required
            />
            <br>
            <h4>Changing Password</h4>
            <label for="password">Old Password</label>
            <br>
            <input
              type="text"
              name="oldPassword"
              placeholder="Enter the old password"
              class="oldPassword"
            />
            <br>
            <label for="password">New Password</label>
            <br>
            <input
              type="text"
              name="newPassword"
              placeholder="Enter the new password"
              class="newPassword"
            />
            <br>
            <button type="submit">Update</button>
        </div>
      </form>
    </div>
  </main>

</body>
</html>
